int pedro()//Função responsalvel por cadastrar os usuarios no sistema
{
 printf("Pedro Alonso foi visto entrando no museu e saindo do\nmesmo com algum obejto de grande porte em sua mão no\ndia da morte de Barbara.\n\n");
 
 system("pause");                                        
 
}

 int bernado()
 {  
 	printf("Bernado foi visto pelas cameras de segurança saindo da casa de Barbara pouco\nantes da mesma ser assasinada, as cameras tambem mostram que ele não\nvoltou pra casa naquela noite.\n\n");
 	
 	system("pause");
 }
 
 int jack()
 {
 	printf("Jack Assis é o irmão mais velho da vitima, nesse momento ele se encontra\nfora do país porem a mensagens no ceular de Barbara que indica que ele\nretornou dias antes de sua morte.\n\n");
 	
 	system("pause");
 	
 }
 int bruna()
 {
 	printf("Bruna Johns é a melhor amiga da vitíma, porem foi\nindicado que elas se afastaram a pouco tempo\npor conta do atual relacionamento de Bruna\njá que quem ela esta namorando é o ex da vitíma.\n\n");
 	
 	system("pause");
 }
 
 int frederico()
 {
 	printf("Frederico Junior é o dono do museu e por enquanto não a indicações de envolvimento com o crime, mas ainda está\nsob investigações por cont do sumiço repentino das chaves do local.\n\n");
 	
 	system("pause");
 }
 
int main()
{
	int opcao=0;
